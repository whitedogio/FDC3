{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fdc3.finos.org/schemas/next/portfolio.schema.json",
  "type": "object",
  "title": "Portfolio",
  "allOf": [
    { "$ref": "context.schema.json" },
    {
      "properties": {
        "type": {
          "const": "fdc3.portfolio",
          "tsType": "ContextType"
        },
        "positions": {
          "type": "array",
          "items": { "$ref": "position.schema.json" }
        }
      },
      "required": [ "type", "positions" ]
    }
  ]
}
