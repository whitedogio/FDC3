{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fdc3.finos.org/schemas/next/contact.schema.json",
  "type": "object",
  "title": "Contact",
  "allOf": [
    { "$ref": "context.schema.json" },
    {
      "properties": {
        "type": {
          "const": "fdc3.contact",
          "tsType": "ContextType"
        },
        "id": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string"
            },
            "FDS_ID": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "id", "type"
      ]
    }
  ]
}
