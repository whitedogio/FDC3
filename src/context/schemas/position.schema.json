{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fdc3.finos.org/schemas/next/position.schema.json",
  "type": "object",
  "title": "Position",
  "allOf": [
    { "$ref": "context.schema.json" },
    {
      "properties": {
        "type": {
          "const": "fdc3.position",
          "tsType": "ContextType"
        },
        "instrument": { "$ref": "instrument.schema.json" },
        "holding": { "type": "number", "minimum": 0 }
      },
      "required": [ "type", "instrument", "holding" ]
    }
  ]  
}
